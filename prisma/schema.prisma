generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model TypesOfRessource {
  name            String              @unique
  allRessources   Ressource[]
}

model Ngo {
  id                String            @id
  name              String            @unique
  description       String
  img_url           String
  allRessources     Ressource[]
  allLinkedKeywords UsedKeyword[]

  @@map("Ngos")
}

model Ressource {
  id                  String          @unique
  url                 String          @unique
  description         String
  ngo                 String
  typeOfRessourceName String
  Ngo                 Ngo              @relation(fields: [ngo], references: [id])
  TypeOfRessource     TypesOfRessource @relation(fields: [typeOfRessourceName], references: [name])

  @@map("Used Resources")
}

model UsedKeyword {
  keyword                  String         @unique
  ngoId                    String?
  protoKeywordProtoKeyword String
  ngo                      Ngo?           @relation(fields: [ngoId], references: [id])
  protoKeywords            ProtoKeyword   @relation(fields: [protoKeywordProtoKeyword], references: [protoKeyword])

  @@map("Used Keyword")
}

model ProtoKeyword {
  protoKeyword    String                  @unique
  allUsedKeywords UsedKeyword[]

  @@map("Prototype Keyword")
}
