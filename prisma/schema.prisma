generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Ngo {
  id           String         @id @default(uuid())
  name         String         @unique
  description  String?
  img_url      String
  keywords     ProtoKeyword[]
  allResources Resource[]

  @@map("Ngos")
}

model Resource {
  id            String        @id @default(uuid())
  url           String        @unique
  description   String?
  ngoId         String
  resourceTypes String
  ngo           Ngo           @relation(fields: [ngoId], references: [id])
  tag           ResourceTag[]

  @@map("Used Resources")
}

model ProtoKeyword {
  id   String @id @default(uuid())
  name String @unique
  ngos Ngo[]

  @@map("Prototype Keyword")
}

model ResourceTag {
  id            String     @id @default(uuid())
  name          String     @unique
  UsedResources Resource[]

  @@map("Tags of resources")
}
