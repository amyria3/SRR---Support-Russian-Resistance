generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Ngo {
  id                String        @id @default(uuid())
  name              String        @unique
  description       String?
  img_url           String
  allLinkedKeywords UsedKeyword[]
  allResources      Resource[]

  @@map("Ngos")
}

model Resource {
  id                  String           @id @default(uuid())
  url                 String           @unique
  description         String?
  ngo                 String
  typeOfResourceName  String
  Ngo                 Ngo              @relation(fields: [ngo], references: [id])
  TypesOfResource     TypesOfResource @relation(fields: [typeOfResourceName], references: [name])

  @@map("Used Resources")
}

model UsedKeyword {
  ngoId         String?
  protoKeyword  String
  id            String       @id @default(uuid())
  ngo           Ngo?         @relation(fields: [ngoId], references: [id])
  protoKeywords ProtoKeyword @relation(fields: [protoKeyword], references: [name])

  @@map("Used Keyword")
}

model ProtoKeyword {
  name            String        @unique
  allUsedKeywords UsedKeyword[]

  @@map("Prototype Keyword")
}

model TypesOfResource {
  name           String     @unique
  Used_Resources Resource[]
}
