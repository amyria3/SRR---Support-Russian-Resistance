generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Ngo {
  id              String         @id @default(uuid())
  name            String         @unique
  description     String?
  img_url         String
  keywords        ProtoKeyword[]
  resources       Resource[]

  @@map("Ngos")
}

model Resource {
  id          String        @id @default(uuid())
  url         String        @unique
  description String?
  ngoId       String
  ngo         Ngo           @relation(fields: [ngoId], references: [id])
  usedTags    ResourceTag[]

  @@map("Used Resources")
}

model ProtoKeyword {
  id          String @id @default(uuid())
  name        String @unique
  linkedNgos  Ngo[]

  @@map("Prototype Keyword")
}

model ResourceTag {
  id            String     @id @default(uuid())
  name          String     @unique
  usedResources Resource[]

  @@map("Tags of resources")
}